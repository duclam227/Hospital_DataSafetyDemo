<Page x:Class="GUI_HospitalManagement.DoctorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI_HospitalManagement"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DoctorPage" Background="white">

    <Grid>
        <TabControl
            Style="{DynamicResource TabControlBaseStyle}"
            TabStripPlacement="Left">
            <TabItem Header="Thông tin khám bệnh"
                     Width="150">
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                Grid.Row="0"/>

                    <DataGrid Name="CheckupRecordGrid"
                              Grid.Row="1"
                              ItemsSource="{Binding}"
                              AutoGenerateColumns="True"
                              IsReadOnly="True">
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Thông tin cá nhân">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                Grid.Row="0"/>
                    <DataGrid Name="EmployeeInformationGrid" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True"></DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
